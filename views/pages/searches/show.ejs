<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Show</title>
    <link href="../../styles/base.css" rel="stylesheet" type="text/css"/>
</head>

<body>

     <%- include('../layouts/header') %>
     <%- include('../layouts/nav') %>

    <main>
        <h1>Results:</h1>
        <div>
    <% books.forEach(book => { %>
      <section id="book-section">
        <section id="img-section">
          <img src="<%= book.thumbnail %>" alt="">
        </section>
        <p><%= book.title %></p>
        <p><%= book.author %></p>
        <p><%= book.description %></p>
         <p><%= book.isbn %></p>
        <p><%= book.offShelf %></p>
 <form action='/books' method="POST">
  <input name="title" value="<%= book.title %>" class="hidden">
  <input name="author" value="<%= book.author %>" class="hidden">
  <input name="description" value="<%= book.description %>" class="hidden">
  <input name="image_url" value="<%= book.thumbnail %>" class="hidden">
  <input name="isbn" value="<%= book.isbn %>" class="hidden">
  <input name="offShelf" value="<%= book.offShelf %>" class="hidden">

  <button type="submit">Select This Book</button>
                        </form>
      </section>
    <% }); %>
        </div>
    </main>
             <%- include('../layouts/footer') %>

</body>

</html>